<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Main Preferences">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="prioritizeTemp"
            app:title="Prioritize temperature"
            app:summary="If on, the app will place more value on finding a better temperature, rather than finding a better cloud cover"/>

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="preferHighTemp"
            app:title="Prefer higher temps"
            app:summary="If on, higher temperatures will always be preferred over lower temperatures"/>

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="preferHighCloudCover"
            app:title="Prefer more clouds"
            app:summary="If on, higher cloud cover will always be preferred over lower cloud cover"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Advanced">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="allowThunderstorms"
            app:title="Allow Thunderstorms" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="allowDrizzle"
            app:title="Allow Drizzle" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="allowRain"
            app:title="Allow Rain" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="allowSnow"
            app:title="Allow Snow" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="allowAtmospheric"
            app:title="Allow Atmospheric conditions"
            app:summary="fog, smoke, sand, etc."/>

    </PreferenceCategory>

</PreferenceScreen>